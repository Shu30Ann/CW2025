<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.ModeMenuController"
           prefHeight="600.0" prefWidth="800.0"
           style="-fx-background-color: black;">

    <VBox fx:id="menuRoot" alignment="CENTER" spacing="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Text text="CHOOSE MODE"
              style="-fx-fill: white; -fx-font-size: 42px; -fx-font-weight: bold;"/>

        <Button text="Basic Game"
                onAction="#startBasic"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 20px; -fx-min-width: 240px;"/>

        <Button text="Versus Game"
                onAction="#startVersus"
                style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-font-size: 20px; -fx-min-width: 240px;"/>

        <Button text="Back"
                onAction="#backToMain"
                style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 120px;"/>
    </VBox>
</StackPane>
